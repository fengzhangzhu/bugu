.question-skeleton{background-color:#fff;width:94%;padding:5% 3%}.question-skeleton .skeleton-item{background-image:linear-gradient(90deg,#f2f2f2 25%,#e6e6e6 37%,#f2f2f2 63%);background-size:400% 100%;background-position:100% 50%;animation:skeleton-loading 1.4s ease infinite}.question-skeleton .question-labels{display:flex;align-items:center;text-align:left;justify-content:flex-start}.question-skeleton .question-labels .question-labels-item{margin-right:10rpx;height:50rpx;width:150rpx}.question-skeleton .question-title{margin-top:20rpx}.question-skeleton .question-title .question-title-text{width:100%;border-radius:10rpx;height:50rpx;margin-top:10rpx}.question-skeleton .question-description{font-weight:600;margin-top:20rpx}.question-skeleton .question-description .question-description-text{margin-top:5rpx;width:100%;border-radius:10rpx;height:30rpx}.question-skeleton .question-footer{margin-top:20rpx;display:flex;align-items:center;justify-content:center;color:#838383}.question-skeleton .question-footer .view-sum{flex-grow:1;border-radius:10rpx;height:30rpx}.question-skeleton .question-footer .like-sum{width:150rpx;border-radius:10rpx;height:30rpx}@keyframes skeleton-loading{0%{background-position:100% 50%}to{background-position:0 50%}}
