.question-item {
  background-color: #FFFFFF;
  margin-top: 10rpx;
  padding: 20rpx;
}
.question-item .title .question-title-text {
  width: 100%;
  border-radius: 10rpx;
  height: 50rpx;
  margin-top: 10rpx;
}
.question-item .answer {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  text-align: left;
}
.question-item .answer .answer-info {
  flex-grow: 1;
}
.question-item .answer .answer-info .answer-user {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  text-align: left;
  width: 100%;
}
.question-item .answer .answer-info .answer-user .user-avatar-content {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
}
.question-item .answer .answer-info .answer-user .user-username {
  margin-left: 10rpx;
  width: 100%;
  border-radius: 10rpx;
  height: 30rpx;
}
.question-item .answer .answer-info .answer-text {
  margin-top: 5rpx;
  width: 100%;
  border-radius: 10rpx;
  height: 30rpx;
}
.question-item .answer .answer-image-content {
  position: relative;
  margin-left: 20rpx;
  height: 120rpx;
  width: 200rpx;
  border-radius: 5rpx;
}
.question-item .footer {
  margin-top: 10rpx;
  display: flex;
  text-align: left;
  align-items: center;
}
.question-item .footer .view-sum {
  flex-grow: 1;
  border-radius: 10rpx;
  height: 30rpx;
}
.question-item .footer .like-sum {
  width: 150rpx;
  border-radius: 10rpx;
  height: 30rpx;
}
.skeleton-item {
  background-image: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 37%, #f2f2f2 63%);
  background-size: 400% 100%;
  background-position: 100% 50%;
  animation: skeleton-loading 1.4s ease infinite;
}
@keyframes skeleton-loading {
0% {
    background-position: 100% 50%;
}
100% {
    background-position: 0 50%;
}
}