.popup-head {
  border-radius: 30rpx 30rpx 0rpx 0rpx;
  overflow: hidden;
  padding: 20rpx;
  display: flex;
  background-color: #FFFFFF;
  align-items: center;
}
.popup-head .popup-head-text {
  flex-grow: 1;
  text-align: center;
  margin-left: 50rpx;
}
.popup-head .close-icon-content {
  width: 50rpx;
}
.action-sheet-content {
  background-color: #FFFFFF;
  padding-bottom: 2%;
}
.article-action-cancel {
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 2%;
  width: 90%;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
