.chat-avatar {
  height: 80rpx;
  width: 80rpx;
  border-radius: 40rpx;
  background-color: #46C7DC;
}
.chat-item-content {
  width: 94%;
  height: -webkit-fit-content;
  height: fit-content;
  display: flex;
  flex-direction: row;
  margin: 2%;
}
.chat-item-content .text-blank {
  flex-grow: 1;
}
.chat-item-content .chat-text {
  margin-left: 20rpx;
  margin-right: 20%;
  width: -webkit-fit-content;
  width: fit-content;
  background-color: #ffffff;
  color: #646464;
  padding: 10rpx;
  border-radius: 0px 20rpx 20rpx 20rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}
.chat-item-content .chat-image {
  width: -webkit-fit-content;
  width: fit-content;
  height: -webkit-fit-content;
  height: fit-content;
  line-height: 0rpx;
  display: inline-block;
  border-radius: 10rpx;
  overflow: hidden;
}
.chat-item-content .chat-voice {
  min-width: 200rpx;
  max-width: 450rpx;
  display: flex;
  color: #adadad;
  text-align: left;
}
.chat-item-content .chat-voice .voice-play-tips {
  flex-grow: 1;
  text-align: left;
}
.chat-item-content .message-withdraw {
  width: 100%;
  text-align: center;
  padding: 25rpx 5rpx;
  font-size: small;
  color: #c7c7c7;
}
.chat-item-me-content {
  width: 94%;
  height: -webkit-fit-content;
  height: fit-content;
  display: flex;
  flex-direction: row-reverse;
  margin: 2%;
}
.chat-item-me-content .text-blank {
  flex-grow: 1;
}
.chat-item-me-content .chat-text {
  margin-left: 20%;
  margin-right: 20rpx;
  width: -webkit-fit-content;
  width: fit-content;
  background-color: #61f5dc;
  color: #646464;
  padding: 10rpx;
  border-radius: 20rpx 0rpx 20rpx 20rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}
.chat-item-me-content .is-not-read-ponit {
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  background-color: #04e2bd;
  border-radius: 5rpx;
  left: -15rpx;
  bottom: 0rpx;
}
.chat-item-me-content .chat-image {
  width: -webkit-fit-content;
  width: fit-content;
  height: -webkit-fit-content;
  height: fit-content;
  line-height: 0rpx;
  display: inline-block;
  border-radius: 10rpx;
  overflow: hidden;
}
.chat-item-me-content .chat-voice {
  min-width: 200rpx;
  max-width: 450rpx;
  display: flex;
  color: #adadad;
  text-align: left;
}
.chat-item-me-content .chat-voice .voice-play-tips {
  flex-grow: 1;
  text-align: left;
}
.message-withdraw {
  width: 100%;
  text-align: center;
  padding: 25px 5px;
  font-size: small;
  color: #c7c7c7;
}