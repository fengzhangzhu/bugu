.acitivity-skeleton-content {
  padding: 3%;
  margin: 3% 0rpx;
  background-color: white;
  list-style: none;
}
.acitivity-skeleton-content .skeleton-item {
  background-image: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 37%, #f2f2f2 63%);
  background-size: 400% 100%;
  background-position: 100% 50%;
  animation: skeleton-loading 1.4s ease infinite;
}
.acitivity-skeleton-content .activity-header {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.acitivity-skeleton-content .activity-header-avatar {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}
.acitivity-skeleton-content .activity-header-avatar .activity-user-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.acitivity-skeleton-content .activity-header-name-and-time {
  flex-grow: 1;
  margin-left: 3%;
  font-size: medium;
  display: flex;
  flex-direction: column;
}
.acitivity-skeleton-content .activity-header-name {
  width: 100%;
  height: 30rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.acitivity-skeleton-content .activity-header-time {
  margin-top: 5rpx;
  height: 30rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.acitivity-skeleton-content .activity-body {
  margin-top: 20rpx;
}
.acitivity-skeleton-content .activity-body-text {
  margin: 2% 0;
  color: #343434;
}
.acitivity-skeleton-content .activity-body-text .body-text {
  border-radius: 10rpx;
  height: 30rpx;
  margin-top: 5rpx;
}
.acitivity-skeleton-content .activity-body-images {
  border-radius: 10rpx;
  overflow: hidden;
  line-height: 0rpx;
}
.acitivity-skeleton-content .activity-body-images .image-item {
  width: 100%;
  height: 60vw;
  border-radius: 10rpx;
  margin-top: 5rpx;
}
.acitivity-skeleton-content .activity-footer {
  border-radius: 10rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  color: #7F7F7F;
  letter-spacing: 4rpx;
  margin-top: 4%;
  height: 30rpx;
  margin-top: 5rpx;
}
@keyframes skeleton-loading {
0% {
    background-position: 100% 50%;
}
100% {
    background-position: 0 50%;
}
}