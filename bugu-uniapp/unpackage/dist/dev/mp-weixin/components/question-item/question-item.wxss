.question-item {
  background-color: #FFFFFF;
  margin-top: 10rpx;
  padding: 20rpx;
}
.question-item .head {
  margin-bottom: 10rpx;
  display: flex;
  text-align: left;
  align-items: center;
}
.question-item .head .help-tips {
  flex-grow: 1;
  font-size: small;
  color: #C2C2C2;
}
.question-item .title {
  color: #000000;
  font-size: medium;
  font-weight: bold;
}
.question-item .answer {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  text-align: left;
}
.question-item .answer .answer-info {
  flex-grow: 1;
}
.question-item .answer .answer-info .answer-user {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  text-align: left;
}
.question-item .answer .answer-info .answer-user .user-avatar-content {
  display: flex;
  align-items: center;
  justify-content: center;
}
.question-item .answer .answer-info .answer-user .avatar-image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
}
.question-item .answer .answer-info .answer-user .user-username {
  margin-left: 10rpx;
  color: #444444;
  font-size: small;
  font-weight: bold;
}
.question-item .answer .answer-info .answer-user .user-tips {
  margin-left: 10rpx;
  color: #999999;
  font-size: small;
}
.question-item .answer .answer-info .answer-text-content {
  line-height: 1.5;
  font-weight: 600;
  color: #444444;
  font-size: 27rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}
.question-item .answer .answer-image-content {
  position: relative;
  margin-left: 20rpx;
  height: 120rpx;
  width: 200rpx;
  border-radius: 5rpx;
  background-color: #BBBBBB;
}
.question-item .answer .answer-image-content .answer-image {
  height: 120rpx;
  width: 200rpx;
}
.question-item .answer .answer-image-content .play-icon-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-15px) translateY(-15px);
}
.question-item .answer-image-full-content {
  position: relative;
  width: 100%;
  height: 50vw;
  margin-top: 10rpx;
  background-color: #BBBBBB;
  border-radius: 10rpx;
  overflow: hidden;
}
.question-item .answer-image-full-content .answer-image-full {
  width: 100%;
  height: 50vw;
}
.question-item .answer-image-full-content .play-icon-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-40px) translateY(-40px);
}
.question-item .footer {
  margin-top: 10rpx;
  display: flex;
  text-align: left;
  align-items: center;
}
.question-item .footer .approval-like-sum {
  flex-grow: 1;
  font-size: small;
  color: #C2C2C2;
}
.question-item .footer .write-answer-button-content {
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
  font-size: medium;
  font-weight: 600;
  color: #FFFFFF;
  padding: 10rpx 20rpx;
  background-color: #4eccb8;
  border-radius: 40rpx;
}