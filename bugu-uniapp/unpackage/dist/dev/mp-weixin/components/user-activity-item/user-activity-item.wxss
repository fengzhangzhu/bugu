.acitivity-content {
  background-color: #1A191F;
  width: 49vw;
  margin-top: 1vw;
  border-radius: 15rpx;
  padding-bottom: 10rpx;
}
.activity-body-text {
  text-align: left;
  padding: 2% 6%;
  color: #BFC0C5;
  font-size: small;
}
.activity-body-images {
  position: relative;
  overflow: hidden;
  border-radius: 10rpx;
  min-height: 40rpx;
}
.activity-body-images .image-item {
  width: 48vw;
  height: 62vw;
  z-index: 98;
}
.activity-body-images .video-item {
  width: 48vw;
  height: 62vw;
  z-index: 98;
}
.activity-header {
  background-color: #1a191f67;
  position: absolute;
  width: 100%;
  height: 40rpx;
  display: flex;
  flex-direction: row-reverse;
  color: #FFFFFF;
  font-size: 20rpx;
  z-index: 99;
  align-items: center;
  justify-content: flex-start;
}
.activity-header .right-edit-item {
  margin-right: 10rpx;
}
.activity-header .mine-acivity-right-edit {
  margin-right: 10rpx;
}
.activity-footer {
  width: 90%;
  display: flex;
  flex-direction: row;
  color: #7F7F7F;
  padding: 2% 5%;
}
.activity-footer .user-info {
  flex-grow: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}
.activity-footer .user-info .avatar-content {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}
.activity-footer .user-info .avatar-content .avatar {
  height: 35rpx;
  width: 35rpx;
  border-radius: 50%;
}
.activity-footer .user-info .username {
  margin-left: 5rpx;
  flex-grow: 1;
  text-align: left;
  color: #535254;
  font-size: 24rpx;
}
.video-content {
  position: relative;
}
.video-content .play-icon-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-30px) translateY(-30px);
}
.activity-footer-item {
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
}
.activity-footer-item .item-value {
  margin-left: 5rpx;
  font-size: 24rpx;
}