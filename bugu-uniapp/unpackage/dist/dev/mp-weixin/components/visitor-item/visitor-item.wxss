.visitor-item-content {
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
  padding: 1% 2%;
  margin: 1% 0;
  background-color: #fff;
}
.visitor-item-content .visit-info {
  text-align: left;
  flex-grow: 1;
  padding-left: 20rpx;
}
.visitor-item-content .visit-info .user-name {
  font-size: medium;
  color: #7d7d7d;
}
.visitor-item-content .visit-info .visit-sum {
  color: #aaaaaa;
  font-size: small;
  font-weight: lighter;
}
.visitor-item-content .unlock-button-content {
  width: 30%;
}
.visitor-item-content .unlock-button {
  padding: 5rpx 20rpx;
  width: -webkit-fit-content;
  width: fit-content;
  background-color: #bbbbbb;
  color: #FFF;
  border-radius: 30rpx;
  margin: 0 auto;
  text-align: center;
  font-size: smaller;
  font-weight: bold;
}
.visitor-item-content .user-item-avatar-content {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}
.visitor-item-content .user-item-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #75e4d2;
}