.user-message-item-content {
  margin-top: 1rpx;
  display: flex;
  width: 92%;
  flex-direction: row;
  padding: 2% 4%;
  background-color: #fff;
  justify-content: center;
  align-items: center;
}
.avatar-content {
  position: relative;
  width: -webkit-fit-content;
  width: fit-content;
  height: -webkit-fit-content;
  height: fit-content;
}
.avatar-content .online-state-point-content {
  position: absolute;
  bottom: 0;
  right: 0;
  padding: 4rpx;
  background-color: #fff;
  border-radius: 12rpx;
}
.avatar-content .online-state-point {
  width: 20rpx;
  height: 20rpx;
  border-radius: 15rpx;
}
.message-avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background-color: #46c7dc;
}
.message-info {
  flex-grow: 1;
  margin-left: 20rpx;
  height: 100rpx;
}
.message-info .info-upper {
  width: 100%;
  display: flex;
  flex-direction: row;
}
.message-info .info-upper .message-name {
  display: flex;
  text-align: center;
  font-size: 30rpx;
  color: #797979;
  flex-grow: 1;
  font-weight: 550;
}
.message-info .info-upper .meassage-time {
  display: flex;
  text-align: center;
  font-size: small;
  color: #9c9c9c;
  margin: 0 10rpx;
}
.message-info .info-upper .meassage-more {
  text-align: center;
  margin: 0 10rpx;
}
.message-info .info-lower {
  margin-top: 10rpx;
  display: flex;
  width: 100%;
  text-align: left;
}
.message-info .info-lower .meassage-text {
  flex: 1;
  font-size: 25rpx;
  color: #bababa;
}
.message-info .info-lower .message-badge {
  height: 45rpx;
  width: 45rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  background-color: #4eccb8;
  color: #fff;
  display: flex;
  align-items: center;
  justify-items: center;
  font-size: small;
}
.message-info .info-lower .message-badge .badge-text {
  width: 45rpx;
  text-align: center;
}