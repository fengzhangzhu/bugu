.scrollview {
  background-color: #000000;
}
.user-upper-half {
  position: relative;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  background-color: #000000;
  background-image: linear-gradient(to bottom, #e7d3aa, #61c5ae);
  height: 50vh;
}
.user-info-content {
  width: 94%;
  position: absolute;
  bottom: 0;
  padding: 3%;
  background-image: linear-gradient(to bottom, #00000000, #000000 50%);
}
.user-info-content .upper-user-info {
  display: flex;
  text-align: center;
  justify-content: center;
  align-items: center;
  height: -webkit-fit-content;
  height: fit-content;
}
.user-info-content .upper-user-info .user-info-left {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
}
.user-info-content .upper-user-info .user-info-left .upper-user-avater {
  position: relative;
  width: -webkit-fit-content;
  width: fit-content;
  height: -webkit-fit-content;
  height: fit-content;
  background: white;
  padding: 2px;
  border-radius: 50%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.user-info-content .upper-user-info .user-info-left .upper-user-avater .vip-logo {
  position: absolute;
  height: -webkit-fit-content;
  height: fit-content;
  width: -webkit-fit-content;
  width: fit-content;
  bottom: -5px;
  right: -5px;
}
.user-info-content .upper-user-info .user-info-left .upper-user-avater .user-avater-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.user-info-content .upper-user-info .user-info-right {
  flex-grow: 1;
  height: 200rpx;
  display: flex;
  flex-direction: column;
}
.user-info-content .upper-user-info .user-info-right .upper-tags-group {
  flex-grow: 1;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
}
.user-info-content .upper-user-info .user-info-right .upper-tags-group .upper-tag {
  width: 100%;
  text-align: center;
  flex-grow: 1;
  color: #fff;
  font-size: medium;
}
.user-info-content .upper-user-info .user-info-right .upper-tags-group .tag-value {
  margin: 0 auto;
  width: -webkit-fit-content;
  width: fit-content;
  position: relative;
  font-size: medium;
}
.user-info-content .upper-user-info .user-info-right .upper-tags-group .tag-value .tag-badge {
  position: absolute;
  top: -20rpx;
  right: -40rpx;
}
.user-info-content .upper-user-info .user-info-right .upper-tags-group .upper-tag .tag-type {
  font-size: 22rpx;
  color: #aaaaaa;
}
.user-info-content .upper-user-info .user-info-right .upper-tags-group .dividing-line {
  width: 1px;
  height: 15px;
  font-size: smaller;
  background-color: #959595;
}
.user-info-content .upper-user-info .user-info-right .button-content {
  flex-grow: 1;
  padding: 10rpx;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
}
.user-info-content .upper-user-info .user-info-right .button-content .edit-button {
  margin: 0 10rpx;
  flex-grow: 1;
  text-align: center;
  padding: 10rpx;
  border-radius: 30rpx;
  border: 1rpx solid #F1F1F1;
  color: #FFFFFF;
  font-size: small;
}
.user-info-content .upper-user-ignature {
  margin-left: 3%;
  font-size: 22rpx;
  color: #aaaaaa;
}
.no-activity {
  margin-top: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #dadada;
}
.user-home-page-footer {
  height: 7vh;
  width: 100%;
  display: flex;
  align-items: center;
}
.home-page-footer-botton {
  text-align: center;
  color: #fff;
  flex-grow: 1;
  margin: 0 8%;
  border-radius: 20rpx;
  padding: 10rpx;
  background-color: #4eccb8;
  transition: all 300ms;
}
.user-lower-half {
  background-color: #000000;
}
.lower-my-aciticities {
  columns: 2;
  column-gap: 0px;
  height: -webkit-fit-content;
  height: fit-content;
}
.lower-my-aciticities .activity-item {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  break-inside: avoid;
}
.no-activity {
  margin-top: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #dadada;
}