.blind-box-content {
  height: 100vh;
  width: 100vw;
  overflow: hidden;
}
.upper-right-tips-content {
  height: 20%;
  position: relative;
  border-bottom: 1rpx solid #4eccb8;
}
.upper-right-tips-content .tips {
  position: absolute;
  width: -webkit-fit-content;
  width: fit-content;
  height: -webkit-fit-content;
  height: fit-content;
  padding: 15rpx 30rpx;
  background-color: #dbe8fd;
  color: #787f8b;
  font-size: small;
}
.upper-right-tips-content .tips-image-content {
  position: absolute;
  bottom: -7rpx;
  right: 20rpx;
  height: -webkit-fit-content;
  height: fit-content;
  width: -webkit-fit-content;
  width: fit-content;
  overflow: visible;
}
.upper-right-tips-content .tips-image {
  position: relative;
  width: 170rpx;
  height: 135rpx;
  overflow: visible;
}
.upper-right-tips-content .rule-tips {
  position: absolute;
  top: -100rpx;
  left: -20rpx;
  border-radius: 30rpx 30rpx 30rpx 0;
}
.upper-right-tips-content .box-tips {
  width: -webkit-fit-content;
  width: fit-content;
  text-align: center;
  min-width: 270rpx;
  position: absolute;
  top: -80rpx;
  left: -380rpx;
  border-radius: 30rpx 30rpx 0rpx 30rpx;
}
.upper-right-tips-content .tickets-tips {
  text-align: center;
  width: 250rpx;
  position: absolute;
  top: 0rpx;
  left: -320rpx;
  border-radius: 30rpx 30rpx 0rpx 30rpx;
}
.take-box-content {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  text-align: center;
  padding: 0px 20rpx;
}
.take-box-content .box-imgae {
  width: -webkit-fit-content;
  width: fit-content;
  height: -webkit-fit-content;
  height: fit-content;
  padding: 30rpx;
  border-radius: 30rpx;
}
.take-box-content .take-girl-box {
  flex-grow: 1;
  text-align: center;
}
.take-box-content .take-boy-box {
  flex-grow: 1;
  text-align: center;
}
.take-box-content .take-me-box {
  flex-grow: 1;
  text-align: center;
}
.put-box-content {
  margin-top: 20%;
  display: flex;
  align-items: center;
  text-align: center;
  padding: 0rpx 20rpx;
}
.put-box-content .put-box {
  flex-grow: 1;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}
.put-box-content .put-box .put-box-text {
  width: -webkit-fit-content;
  width: fit-content;
  font-size: larger;
  padding: 30rpx 120rpx;
  border-radius: 30rpx;
}
.get-more-tikets {
  margin: 0 auto;
  margin-top: 10%;
  width: -webkit-fit-content;
  width: fit-content;
  background-color: #d1e2ff;
  color: #787f8b;
  font-size: small;
  padding: 15rpx 60rpx;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}