.my-box-content {
  padding: 2%;
}
.box-tags-content {
  display: flex;
  align-items: center;
  justify-content: center;
}
.box-tags-content .box-tag-take {
  text-align: center;
  flex-grow: 1;
  margin-right: 10rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
}
.box-tags-content .box-tag-put {
  text-align: center;
  flex-grow: 1;
  margin-left: 10rpx;
  padding: 20rpx;
  color: #fff;
  background-color: #ca9306;
  border-radius: 20rpx 20rpx 0 0;
}
.box-logs-content {
  position: relative;
}
.box-logs-content .box-take-log {
  width: 100%;
  position: absolute;
  background-color: #FFF;
  min-height: 200rpx;
  width: 100%;
  padding: 10rpx 0rpx;
  border-radius: 0 0 20rpx 20rpx;
}
.box-logs-content .box-put-log {
  width: 100%;
  position: absolute;
  background-color: #FFF;
  min-height: 200rpx;
  width: 100%;
  padding: 10rpx 0rpx;
  border-radius: 0 0 20rpx 20rpx;
}
.box-edit-button {
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 2%;
  width: 90%;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  background-color: #ff7345;
  border-radius: 50rpx;
  color: #FFFFFF;
