.sign-in-lottery-content {
  margin: 30rpx;
  border-radius: 30rpx;
  background-color: #fff;
  height: -webkit-fit-content;
  height: fit-content;
  text-align: center;
  padding: 40rpx 30rpx;
}
.lottery-title {
  width: 100%;
  font-size: 60rpx;
  color: #000;
  font-weight: 900;
}
.lottery-tips {
  width: 100%;
  margin-top: 10rpx;
  font-size: medium;
  color: #818181;
}
.sign-process {
  position: relative;
  margin-top: 50rpx;
  height: 50rpx;
  background-color: #eeeeee;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.sign-process .sign-process-compelete {
  transition: all 300ms;
  left: 0;
  top: 0;
  z-index: 99;
  position: absolute;
  height: 100%;
  background-color: #4eccb8;
  border-radius: 20rpx;
}
.sign-process .sign-process-text {
  z-index: 100;
  font-size: small;
}
.sign-blocks-content {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.sign-blocks-content .sign-block-conetnt {
  width: 33.3%;
  margin-top: 70rpx;
  display: flex;
}
.sign-blocks-content .sign-block {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 170rpx;
  width: 170rpx;
  border-radius: 30rpx;
  background: #ffe6cb;
}
.sign-blocks-content .sign-block .sign-block-text {
  z-index: 100;
  font-size: large;
  font-weight: lighter;
}
.sign-blocks-content .sign-block .sign-block-number-bg {
  position: absolute;
  font-size: 150rpx;
  font-weight: bold;
  color: #fff;
  opacity: 0.4;
  z-index: 99;
  display: flex;
  align-items: center;
  justify-content: center;
}
.sign-blocks-content .sign-block .sign-block-number-bg .lucky-draw-icon {
  width: 130rpx;
  height: 130rpx;
}
.sign-rules {
  text-align: left;
  margin-top: 50rpx;
}
.sign-rules .rule-item {
  margin-top: 10rpx;
  color: #909090;
  display: flex;
  align-items: center;
}
.sign-rules .rule-item .emphasis-esymbol {
  background-color: #4eccb8;
  width: 14rpx;
  height: 14rpx;
  border-radius: 7rpx;
}
.sign-rules .rule-item .rule-item-text {
  font-size: small;
  margin-left: 10rpx;
}
.sign-button {
  margin: 0 auto;
  margin-top: 30rpx;
  width: 100%;
  padding: 20rpx 0rpx;
  font-size: larger;
  color: #fff;
  background-color: #4eccb8;
  border-radius: 20rpx;
}