.authentication-success {
  padding: 30% 15%;
  font-size: large;
  font-weight: bold;
  text-align: center;
  color: #727272;
}
.real-name-authentication-content {
  background-color: #fff;
  min-height: 100vh;
}
.authentication-reason {
  margin-top: 2%;
  margin-left: 2%;
  margin-right: 5%;
  color: #696969;
  text-align: left;
  font-size: smaller;
}
.authentication-info-content {
  padding: 2%;
  text-align: left;
}
.authentication-info-content .authentication-tips {
  font-size: smaller;
  color: #fc1313;
}
.authentication-info-content .shcool-id-input {
  border-radius: 20rpx;
  padding: 10rpx;
  border: 1rpx solid #979797;
  border-radius: 30rpx;
}
.authentication-info-content .info-type {
  width: 100%;
  text-align: left;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  color: #6b6b6b;
}
.authentication-image-content {
  margin: 30rpx auto;
  width: 80vw;
  height: 40vw;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #979797;
  border: 1rpx solid #979797;
  border-radius: 30rpx;
  overflow: hidden;
}
.authentication-image-content .authentication-image {
  width: 80vw;
  height: 40vw;
}
.authentication-image-content .authentication-image-text {
  margin: 2% 30rpx;
  font-size: small;
}
.authentication-tips {
  margin: 20rpx auto;
  width: 80%;
  color: #979797;
  font-size: small;
  text-align: left;
}
.authentication-button {
  margin: 2%;
}
.agree-content {
  text-align: right;
  font-size: smaller;
}