.report-user-content {
  background-color: #FFFFFF;
  min-height: 100vh;
  padding-bottom: 20rpx;
}
.reason-title {
  margin-top: 10rpx;
  margin-left: 10rpx;
  color: #9e9e9e;
  font-size: medium;
}
.reason-input {
  margin-top: 10rpx;
  padding: 20rpx;
  border-bottom: 1px solid #F1F1F1;
  border-top: 1px solid #F1F1F1;
}
.report-button {
  margin: 20rpx;
}
.report-success {
  margin-top: 30vh;
  color: #8d8d8d;
  font-size: larger;
  width: 100%;
  text-align: center;
}
.report-select-content {
  line-height: 60rpx;
  height: -webkit-fit-content;
  height: fit-content;
}
.report-select-content .report-select-item {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #F1F1F1;
  padding: 15rpx;
}
.report-select-content .report-select-item .report-text {
  flex-grow: 1;
  font-size: large;
}