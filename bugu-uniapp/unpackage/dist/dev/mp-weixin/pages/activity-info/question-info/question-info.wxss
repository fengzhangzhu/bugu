.question-content {
  background-color: #FFFFFF;
  width: 94%;
  padding: 5% 3%;
}
.question-content .question-labels {
  display: flex;
  align-items: center;
  text-align: left;
  justify-content: flex-start;
}
.question-content .question-labels .question-labels-item {
  margin-right: 10rpx;
  padding: 10rpx 20rpx;
  background-color: #F6F6F6;
  border-radius: 10rpx;
  color: #999999;
  font-size: 28rpx;
}
.question-content .question-title {
  margin-top: 20rpx;
  font-size: larger;
  color: #000000;
  font-weight: bold;
}
.question-content .question-description {
  font-weight: 600;
  letter-spacing: 3rpx;
  margin-top: 20rpx;
  font-size: 30rpx;
  color: #6f6f6f;
  position: relative;
}
.question-content .question-description .question-description-image-one .image-item-content {
  width: 100%;
  height: 40vw;
  position: relative;
}
.question-content .question-description .question-description-image-one .image-item-content .play-icon-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-35px) translateY(-35px);
}
.question-content .question-description .question-description-image-one .image-item-content .image-item {
  width: 100%;
  height: 40vw;
  border-radius: 10rxp;
  background-color: #C7C7C7;
}
.question-content .question-description .question-description-image .image-item-content {
  width: 100%;
}
.question-content .question-description .question-description-image .question-image-item {
  margin-top: 5rpx;
  width: 100%;
  border-radius: 10rxp;
  background-color: #C7C7C7;
}
.question-content .question-description .unfold-content {
  width: 100%;
  text-align: right;
  margin-top: 5rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  z-index: 100;
}
.question-content .question-description .unfold-content .unfold-triangle {
  text-indent: 10rpx;
  font-size: 15rpx;
}
.question-content .question-footer {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #838383;
}
.question-content .question-footer .view-sum {
  flex-grow: 1;
  text-align: left;
  font-size: 22rpx;
}
.question-content .question-footer .view-sum .sum-number {
  font-size: 24rpx;
  color: #000000;
  font-weight: bold;
}
.question-content .question-footer .like-sum {
  padding: 5rpx 10rpx;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  font-size: 20rpx;
}
.question-content .question-footer .is-liked-0 {
  background-color: #F6F6F6;
}
.question-content .question-footer .is-liked-1 {
  background-color: #C6F4E7;
  color: #04543B;
}
.operation-options-content {
  background-color: #FFFFFF;
  border-top: solid 1rpx #F1F1F1;
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: center;
  height: 120rpx;
}
.operation-options-content .divider-line {
  width: 1rpx;
  height: 100%;
  background-color: #F1F1F1;
}
.operation-options-content .option-item {
  padding: 20rpx;
  flex-grow: 1;
  width: 30%;
  color: #626262;
  font-size: 27rpx;
  font-weight: bold;
}
.operation-options-content .share-button {
  background-color: #FFFFFF;
  border: none !important;
  padding: 0px !important;
  border-radius: 0;
  line-height: normal !important;
}
.answer-scroll {
  margin-top: 20rpx;
  width: 100%;
}
.answer-scroll .answer-head {
  background-color: #FFFFFF;
  display: flex;
  align-items: center;
  text-align: left;
  justify-content: left;
  padding: 0 3%;
}
.answer-scroll .answer-head .answers-sum {
  color: #565656;
  font-size: 27rpx;
  font-weight: bold;
  padding: 20rpx 0rpx;
}