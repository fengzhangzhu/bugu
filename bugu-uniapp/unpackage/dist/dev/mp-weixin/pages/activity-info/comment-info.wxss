.comment-info-content {
  width: 100vw;
  height: 100vh;
  position: relative;
  overflow: hidden;
}
.comment-is-deleted {
  height: 83vh;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: large;
  color: #6D6D6D;
}
.reply-newest {
  height: 150rpx;
}
.comment-bottom-content {
  background-color: #d0ebe7;
  position: absolute;
  width: 100%;
  bottom: 0px;
  transition: all 200ms;
}
.comment-input-content {
  width: 96%;
  margin: 2%;
  min-height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
}
.comment-input-content .comment-input {
  flex: 1;
  padding: 10rpx;
  border-radius: 30rpx;
  background-color: #fff;
}
.comment-input-content .send-button-content {
  width: 100rpx;
  padding: 10rpx;
  margin-left: 15rpx;
  display: flex;
  border-radius: 30rpx;
  background-color: #4eccb8;
  text-align: center;
  align-items: center;
  justify-content: center;
}
.comment-input-content .send-button-content .send-button {
  color: #FFF;
  font-weight: bold;
}
.comment-input-content .option-image-content {
  margin-left: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}
.comment-input-content .send-option-image {
  width: 50rpx;
  height: 50rpx;
}